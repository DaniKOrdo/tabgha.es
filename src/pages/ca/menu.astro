---
import { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import TitleSection from "../../components/widgets/TitleSection.astro";
import DrinkSVG from "../../components/icons/Drink.astro";

changeLanguage("ca");
---

<Layout title={t("seo.titulo.carta")}>
  <header>
    <Navbar />
  </header>
  <main class="flex justify-center sm:py-40 py-16">
    <div class="max-w-screen-xl flex flex-col justify-center items-center ">
      <TitleSection title={t("titulos.carta")} customClass="p-6" />
      <picture>
        <!-- <source srcset="/img/carta/carta-comida-tabgha-ca.webp" type="image/webp"> -->
        <img src="/img/carta/carta-comida-tabgha-ca.jpg" alt={t("titulos.carta")}>
        <!-- <img src="/img/Tabgha-Panes-y-Peces.jpg" alt="Tabgha Panes y Peces" class="mb-6 max-h-80 w-full m-auto object-cover rounded-md"> -->
      </picture>
      <a href={localizePath(t("navegacion.bebidas"))}
        class="flex items-center justify-center gap-2 w-3/4 sm:w-1/4 rounded px-12 py-3 text-sm font-medium text-white shadow bg-tg-two mt-8">
        <DrinkSVG />{t("botones.bebidas")}
      </a>
    </div>
  </main>
  <Footer />
</Layout>
