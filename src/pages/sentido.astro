---
import { t, changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import TitleSection from "../components/widgets/TitleSection.astro";

changeLanguage("es");
---

<Layout title="Tabgha">
  <header>
    <Navbar />
  </header>
  <main class="flex justify-center sm:py-40 py-24 px-5">
    <div class="max-w-screen-xl">
      <TitleSection title={t("titulos.sentido")} customClass="p-6" />
      <img
        src="/img/Tabgha-Panes-y-Peces.jpg"
        alt="Tabgha Panes y Peces"
        class="mb-6 max-h-80 w-full m-auto object-cover rounded-md"
      />
      <p class="sm:text-xl whitespace-pre-wrap">{t("sentido.texto")}</p>
    </div>
  </main>
  <Footer />
</Layout>
