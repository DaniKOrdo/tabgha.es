---
import i18next, { t, changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Hero from "../../components/Hero.astro";
import Carousel from "../../components/Carousel.astro";
import Footer from "../../components/Footer.astro";
import Sentido from "../../components/Sentido.astro";
import NuestraCarta from "../../components/NuestraCarta.astro";
import Noticias from "../../components/Noticias.astro";
import Ubicacion from "../../components/Ubicacion.astro";
import Colabora from "../../components/Colabora.astro";
import CookiesBanner from "../../components/widgets/CookiesBanner.astro";

changeLanguage("en");
---

<Layout title={t("site.inicio")}>
	<header>
		<Navbar />
	</header>
	<main class="mb-36">
		<Hero />
		<CookiesBanner />
		<Carousel />
		<Sentido />
		<NuestraCarta />
		<Colabora />
		<Noticias />
		<Ubicacion />
	</main>

	<Footer />
</Layout>
