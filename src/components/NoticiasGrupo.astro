---
import { t } from "i18next";
import ArrowRightSM from "./icons/ArrowRightSM.astro";
import { Image } from '@astrojs/image/components';

const { imagen, alt, fecha, titulo, descripcion, url, optimize = false } = Astro.props;
---

<div class="w-full px-6 md:w-1/2 lg:w-1/3 py-6 bg-[#e8e6db] rounded mx-2">
    <a class="mx-auto mb-5 max-w-[370px]" href={url}>
        <div class="mb-5 overflow-hidden rounded">
            {
                optimize === true ? (
                    <Image src={imagen} alt={alt} width={341} height={185} class="object-cover skeleton"/>
                ) : (
                    <img src={imagen} alt={alt} width="341" height="185" class="object-cover skeleton"/>
                )
            }
        </div>
    </a>
        <div>
            <span class="bg-tg-two mb-3 inline-block rounded py-1 px-4 text-center text-xs font-semibold leading-loose text-white">
                { fecha }
            </span>
            <h3>
                <span class="text-dark hover:text-primary mb-4 inline-block text-xl font-semibold sm:text-2xl lg:text-xl xl:text-2xl">
                    { titulo }
                </span>
            </h3>
            <p class="text-body-color text-base">
                { descripcion }
            </p>
        </div>
        <div class="mt-6 flex justify-center gap-4 text-center">
            <a
              href={url}
              class="flex items-center justify-center gap-2 rounded bg-tg-two px-12 py-3 text-sm font-medium text-white shadow sm:w-auto"
            >
            {t("botones.leerMas")}
             <ArrowRightSM stroke="white" />
            </a>
          </div>
</div>