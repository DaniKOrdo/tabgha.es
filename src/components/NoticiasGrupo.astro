---
const { imagen, fecha, titulo, descripcion, url } = Astro.props;
---

<div class="w-full px-4 md:w-1/2 lg:w-1/3">
    <a class="mx-auto mb-10 max-w-[370px]" href={url}>
        <div class="mb-8 overflow-hidden rounded">
            <img
            src={ imagen }
            alt="image"
            class="object-cover"
            />
        </div>
        <div>
            <span class="bg-tg-two mb-5 inline-block rounded py-1 px-4 text-center text-xs font-semibold leading-loose text-white">
                { fecha }
            </span>
            <h3>
                <span class="text-dark hover:text-primary mb-4 inline-block text-xl font-semibold sm:text-2xl lg:text-xl xl:text-2xl">
                    { titulo }
                </span>
            </h3>
            <p class="text-body-color text-base">
                { descripcion }
            </p>
        </div>
    </a>
</div>