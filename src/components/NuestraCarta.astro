---
import { t } from "i18next";
import Menu from '/img/menu.png'
import TitleSection from "./widgets/TitleSection.astro";
---

<section id="menu" class="flex justify-center">
    <div class="flex flex-col-reverse md:flex-row md:justify-center w-screen md:gap-4 items-center text-black max-w-screen-xl md:p-8 max-m-32 md:m-12 rounded-xl">
        <div class="p-8 flex">
            <img
            class="max-h-96"
            src={Menu}
            alt="Menu"
            />
        </div>
        <div class="text-center sm:text-center p-8">
            <TitleSection title={t("titulos.carta")} />

            <p class="mt-4 max-w-lg sm:text-xl ">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            </p>

            <div class="mt-8 justify-center flex flex-col items-center gap-4 text-center">
                <a href={"/" + t("navegacion.desayuno")} class="w-3/4 rounded px-12 py-3 text-sm font-medium text-white shadow bg-tg-three bg-opacity-80">Desayuno</a>
                <a href={"/" + t("navegacion.comida")} class="w-3/4 rounded px-12 py-3 text-sm font-medium text-white shadow bg-tg-three bg-opacity-80">Comida</a>
                <a href={"/" + t("navegacion.bebidas")} class="w-3/4 rounded px-12 py-3 text-sm font-medium text-white shadow bg-tg-three bg-opacity-80">Bebidas</a>
            </div>
        </div>
    </div>
</section>