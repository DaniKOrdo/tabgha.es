---
import TitleSection from "./TitleSection.astro";

const {
  id,
  flex = "flex-col lg:flex-row",
  title,
  text,
  img,
  alt,
  maps,
} = Astro.props;
---

<section id={id} class="flex justify-center my-8">
  <div
    class={`flex ${flex} lg:justify-center items-center w-screen max-w-screen-xl lg:gap-4 text-black max-m-32 lg:p-6 lg:m-6 rounded-xl`}
  >
    <div
      class="flex flex-col items-center text-center sm:text-left p-6 lg:w-1/2 h-full"
    >
      <TitleSection title={title} />
      <p class="mt-4 max-w-lg sm:text-xl">{text}</p>
      <slot />
    </div>

    {
      maps === "true" ? (
        <div class="flex justify-center lg:w-1/2">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3077.2361677215235!2d2.5725802516980334!3d39.53172601680647!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12978e860d3fff67%3A0x3d8e5918ef21b632!2sRoxy%20Beach!5e0!3m2!1ses!2ses!4v1680121610041!5m2!1ses!2ses"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-screen p-2 h-full sm:min-h-[400px] min-h-[300px] sm:w-[600px] rounded-md"
          />
        </div>
      ) : (
        <div class="p-6 flex justify-center lg:w-1/2">
          <img loading="lazy" class="max-h-80 rounded-md" src={img} alt={alt} />
        </div>
      )
    }
  </div>
</section>
