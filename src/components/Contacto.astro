---
import { t } from "i18next";
import TitleSection from "./widgets/TitleSection.astro";
import Email from "./icons/Email.astro";
import Whatsapp from "./icons/Whatsapp.astro";
---
<section id={t("contacto.id")} class="flex flex-col justify-center items-center max-w-screen-xl mx-auto pt-14"  >
        <TitleSection title={t("contacto.titulo")} />
        <div class="flex flex-col md:flex-row gap-6 md:gap-24">
            <div class="flex flex-col justify-center items-center gap-3">
                <p class="mt-4 max-w-lg sm:text-xl whitespace-pre-wrap">{t("contacto.movilTexto")}</p>
                <a href="https://wa.me/34639288167" target="_blank" class="flex items-center justify-center gap-2 rounded bg-tg-two px-12 py-3 text-sm font-medium text-white shadow sm:w-auto w-full">
                    <Whatsapp stroke="white" />
                    Whatsapp
                </a>
            </div>
            <div class="flex flex-col justify-center items-center gap-3">
                <p class="mt-4 max-w-lg sm:text-xl whitespace-pre-wrap">{t("contacto.mailTexto")}</p>
                <a href="mailto:info@tabgha.es" class="flex items-center justify-center gap-2 rounded bg-tg-two px-12 py-3 text-sm font-medium text-white shadow sm:w-auto w-full">
                    <Email stroke="white" />
                    info@tabgha.es
                </a>
            </div>
        </div>
  </section>