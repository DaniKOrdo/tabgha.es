---
import { t } from "i18next";
import { localizePath } from "astro-i18next";
import Section from "./widgets/Section.astro";
import ArrowRightSM from "./icons/ArrowRightSM.astro";
---

<Section
  id={t("navbar.sentido")}
  title={t("titulos.sentido")}
  text={t("textos.sentido")}
  img="/img/mural-tabgha.jpg"
  alt="Mural Tabgha",
  imgWidth="799px"
  imgHeight="435px"
  url={localizePath(t("navegacion.sentido"))}
>
  <div class="mt-8 justify-center flex gap-4 text-center">
    <a
      href={localizePath(t("navegacion.sentido"))}
      class="flex items-center justify-center gap-2 rounded bg-tg-two px-12 py-3 text-sm font-medium text-white shadow sm:w-auto"
    >
      {t("botones.leerMas")}
      <ArrowRightSM stroke="white" />
    </a>
  </div>
</Section>
