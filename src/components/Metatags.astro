---
import { t } from "i18next";
---

<meta name="keywords" content={t("site.keywords")} />
<meta name="author" content="danik.dev" />
<meta name="copyright" content="danik.dev" />
<!-- Primary Meta Tags -->
<meta name="title" content={t("site.inicio")} />
<meta name="description" content={t("site.descripcion")} />
<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://www.tabgha.es" />
<meta property="og:title" content={t("site.inicio")} />
<meta property="og:description" content={t("site.descripcion")} />
<meta
  property="og:image"
  content="https://www.tabgha.es/portada-tabgha.jpg"
/>
<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://www.tabgha.es" />
<meta property="twitter:title" content={t("site.inicio")} />
<meta property="twitter:description" content={t("site.descripcion")} />
<meta
  property="twitter:image"
  content="https://www.tabgha.es/portada-tabgha.jpg"
/>
